{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "user-route": {
        "ClusterId": "user-cluster",
        "Match": {
          "Path": "/user/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "{**catch-all}"
          }
        ]
      },
      "auth-route": {
        "ClusterId": "user-cluster",
        "Match": {
          "Path": "/auth/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "{**catch-all}"
          }
        ]
      },
      "language-route": {
        "ClusterId": "language-cluster",
        "Match": {
          "Path": "/language/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "{**catch-all}"
          }
        ]
      },
      "post-route": {
        "ClusterId": "post-cluster",
        "Match": {
          "Path": "/post/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "{**catch-all}"
          }
        ]
      }
    },
    "Clusters": {
      "user-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://ck.rest.users:8080"
          }
        }
      },
      "language-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://ck.rest.languages:8080"
          }
        }
      },
      "post-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://ck.rest.posts:8080"
          }
        }
      }
    }
  }
}
